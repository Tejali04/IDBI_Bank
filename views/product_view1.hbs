<html lang="en">
<head>
	<meta charset="utf-8">
	<title>CRUD Node.js and Mysql</title>
  <link href="/assets/css/bootstrap.css" rel="stylesheet" type="text/css"/>
</head>
<body>
  <div class="container">
<br><br>
    <table class="table table-striped" id="mytable">
      <h1 style="text-align: center;">Customer Details</h1>
      <br>
      <thead>
        <tr>
          <td> <b> Enter a Number</b></td>
          <td><input type="number" name="cid"></td>
          <td><a href="#" class="btn btn-success" role="button">View Details</a></td>
        </tr>
        <tr>
          <th>Customer ID</th>
          <th>Customer Name</th>
          <th>Address</th>
          <th>Email</th>
          
        </tr>

        
      </thead>
      <tbody>
         {{#each results}}
        <tr>
          <td>{{ cid }}</td>
          <td>{{ cname }}</td>
          <td>{{ address }}</td>
          <td>{{ email }}</td>
          
        </tr>
        {{/each}}
        
      </tbody>
    </table>
  </div>

<script src="/assets/js/jquery-3.3.1.js"></script>
<script src="/assets/js/bootstrap.js"></script>

</body>
</html>

